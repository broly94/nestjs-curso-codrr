{
  "name": "curso-codrr",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "set NODE_ENV=develop&& nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "orm:init:dev": "typeorm-ts-node-esm -d src/config/data-source.ts",
    "orm:init:prod": "typeorm-ts-node-esm -d app/config/data-source.ts",
    "m:gen:dev": "set NODE_ENV=develop&& pnpm run orm:init:dev migration:generate",
    "m:run:dev": "set NODE_ENV=develop&& pnpm run orm:init:dev migration:run",
    "m:show:dev": "set NODE_ENV=develop&& pnpm run orm:init:dev migration:show",
    "m:gen:prod": "set NODE_ENV=production&& pnpm run orm:init:prod migration:generate",
    "m:run:prod": "set NODE_ENV=production&& pnpm run orm:init:prod migration:run",
    "m:show:prod": "set NODE_ENV=production&& pnpm run orm:init:prod migration:show"
  },
  "dependencies": {
    "@angular-devkit/schematics": "^16.0.3",
    "@nestjs/common": "9.0.0",
    "@nestjs/config": "2.3.1",
    "@nestjs/core": "9.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "9.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "9.0.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "formidable": "^2.1.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "1.10.0",
    "pg": "8.10.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.2.0",
    "superagent": "^7.1.5",
    "typeorm": "0.3.16",
    "typeorm-naming-strategies": "4.1.0",
    "@angular-devkit/core": "^14.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.0",
    "@nestjs/testing": "9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "29.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "1.9.4",
    "@types/node": "18.15.11",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "29.5.0",
    "prettier": "2.3.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typeorm-cli": "^1.0.7",
    "typescript": "4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
